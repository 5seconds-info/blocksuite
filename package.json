{
  "name": "building-blocks",
  "version": "0.0.0",
  "description": "Building Blocks framework workspace",
  "scripts": {
    "dev": "pnpm --filter @building-blocks/playground dev",
    "lint": "eslint ./ --max-warnings=0",
    "test:e2e": "playwright test",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:headed": "playwright test --headed",
    "test:unit": "pnpm --filter @building-blocks/store test",
    "format": "prettier --write packages tests",
    "build:playground": "pnpm --filter @building-blocks/playground build"
  },
  "keywords": [],
  "author": "toeverything",
  "license": "Apache-2.0",
  "dependencies": {
    "lit": "^2.3.1",
    "quill": "^1.3.7",
    "quill-cursors": "^4.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.25.2",
    "@types/node": "^18.7.16",
    "@types/quill": "^2.0.9",
    "@types/react": "^18.0.19",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "@vitejs/plugin-react": "^2.1.0",
    "eslint": "^8.23.0",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.3",
    "vite": "^3.1.0"
  }
}
